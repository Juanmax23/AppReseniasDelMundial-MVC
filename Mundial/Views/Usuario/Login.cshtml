
@{
    ViewData["Title"] = "Login";
}

<h1><u>Iniciar sesión</u></h1>
<br />

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}

<form method="post" action="~/usuario/ProcesarLogin">

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese email" value="@ViewBag.EmailLog">
    </div>

    <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese Contraseña" value="12345678">
    </div>

    <input type="submit" class="btn btn-primary" value="Iniciar Sesion" />
</form>


