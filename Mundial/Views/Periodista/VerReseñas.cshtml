@using Dominio;
@{
    ViewData["Title"] = "VerReseñas";
}

<h1><u>Mis reseñas</u></h1>
<br />
<br />


@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}


@if (ViewBag.VerReseñas != null && ViewBag.VerReseñas.Count > 0)
{
    {
        <table class="table">
            <tr>
                <th>Título de la reseña</th>
                <th>Contenido</th>
                <th>Partido</th>
                <th>Fecha Partido</th>
                <th>Fecha de la reseña</th>
            </tr>
            @foreach (Resenia r in ViewBag.VerReseñas)
            {
        <tr>
            <td>@r.Título</td>
            <td>@r.Contenido</td>
            <td>@r.Partido.Seleccion1.NombrePais vs @r.Partido.Seleccion2.NombrePais</td>
            <td>@r.Partido.FechaYHora</td>
            <td>@r.Fecha</td>
        </tr>
            }
        </table>
        <br />
    }
}
